@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container py-5 mt-4">
    <a asp-controller="Home" asp-action="Index" class="nav-link mb-3">← Back Home</a>

    <div class="card-ux p-4">
        <h3 class="mb-3 fw-semibold text-brand">Create Product (Simulation)</h3>
        <p class="text-secondary">
            This static form demonstrates how the “Create” feature would function in the live project.
        </p>

        <!-- Static Form for now, will convert to real form later -->
        <form>
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Product Name</label>
                    <input class="form-control" placeholder="e.g., Oversized Tee">
                </div>

                <div class="col-md-6">
                    <label class="form-label">Category</label>
                    <select class="form-select">
                        <option>Urban Basics</option>
                        <option>Smart Streetwear</option>
                        <option>EcoActive</option>
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Price ($)</label>
                    <input type="number" class="form-control" min="0" step="0.01" placeholder="25.00">
                </div>

                <div class="col-md-4">
                    <label class="form-label">Stock Quantity</label>
                    <input type="number" class="form-control" min="0" placeholder="100">
                </div>

                <div class="col-md-4">
                    <label class="form-label">SKU</label>
                    <input class="form-control" placeholder="UT-TEE-001">
                </div>
            </div>

            <div class="d-flex gap-3 mt-4">
                <button type="button" class="btn btn-brand">Create Item</button>
                <a asp-controller="Product" asp-action="Read" class="btn btn-outline-brand">Go to Inventory</a>
            </div>
        </form>
    </div>
</main>

<footer class="py-4 text-center">
    <div class="container">
        © 2025 Urbana Threads · Retail Management Platform · Designed by Group 4
    </div>
</footer>
