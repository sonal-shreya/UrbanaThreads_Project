@model UrbanaThreadsProject.Models.Product

@{
    ViewData["Title"] = "Update Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container py-5 mt-4">
    <a asp-controller="Products" asp-action="Index" class="nav-link mb-3">← Back to Inventory</a>

    <div class="card-ux p-4">
        <h3 class="mb-3 fw-semibold text-brand">Update Product</h3>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form asp-action="Edit" method="post" class="row g-3 mt-2">

            @Html.HiddenFor(m => m.ProductId)

            <!-- Hidden Inventory ID -->
            <input type="hidden" name="InventoryId" value="@Model.Inventory?.InventoryId" />

            <!-- Product Name -->
            <div class="col-md-8">
                <label class="form-label">Product Name</label>
                <input asp-for="Name" class="form-control" placeholder="Product Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Category -->
            <div class="col-md-4">
                <label class="form-label">Category</label>
                <select class="form-select" asp-for="CategoryId" asp-items="ViewBag.Categories"></select>
            </div>

            <!-- Price -->
            <div class="col-md-4">
                <label class="form-label">Price ($)</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Stock Quantity -->
            <div class="col-md-4">
                <label class="form-label">Stock Quantity</label>
                <input type="number" class="form-control" name="StockQuantity"
                       value="@(Model.Inventory?.StockQuantity ?? 0)" min="0" />
            </div>

            <!-- Reorder Level -->
            <div class="col-md-4">
                <label class="form-label">Reorder Level</label>
                <input type="number" class="form-control" name="ReorderLevel"
                       value="@(Model.Inventory?.ReorderLevel ?? 0)" min="0" />
            </div>

            <!-- SKU -->
            <div class="col-md-4">
                <label class="form-label">SKU</label>
                <input asp-for="SKU" class="form-control" placeholder="SKU Code" />
            </div>

            <!-- Description -->
            <div class="col-12">
                <label class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="d-flex gap-3 mt-4">
                <button type="submit" class="btn btn-brand px-4">Save Changes</button>
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
            </div>

        </form>
    </div>
</main>

<footer class="py-4 text-center">
    <div class="container">
        © 2025 Urbana Threads · Retail Management Platform · Designed by Group 4
    </div>
</footer>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
