@model UrbanaThreadsProject.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container py-5 mt-4">
    <a asp-controller="Products" asp-action="Index" class="nav-link mb-3">← Back to Inventory</a>

    <div class="card-ux p-4">
        <h3 class="mb-3 fw-semibold text-danger">Delete Product</h3>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="alert alert-warning">
            <strong>Warning!</strong> Are you sure you want to delete this product?
            This action cannot be undone.
        </div>

        <dl class="row">
            <dt class="col-sm-3 fw-bold">Product ID</dt>
            <dd class="col-sm-9">@Model.ProductId</dd>

            <dt class="col-sm-3 fw-bold">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3 fw-bold">Category</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>

            <dt class="col-sm-3 fw-bold">Price</dt>
            <dd class="col-sm-9">$@Model.Price</dd>

            @{
                var stock = Model.Inventory?.StockQuantity ?? 0;
                var reorder = Model.Inventory?.ReorderLevel ?? 0;
            }

            <dt class="col-sm-3 fw-bold">Stock</dt>
            <dd class="col-sm-9">
                @stock
                @if (stock <= reorder)
                {
                    <span class="badge bg-danger ms-2">Low</span>
                }
            </dd>
        </dl>

        <form asp-action="DeleteConfirmed" asp-route-id="@Model.ProductId" method="post">
            @Html.HiddenFor(m => m.ProductId)
            <button type="submit" class="btn btn-danger px-4">Delete</button>
            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
        </form>
    </div>
</main>

<footer class="py-4 text-center">
    <div class="container">
        © 2025 Urbana Threads · Retail Management Platform · Designed by Group 4
    </div>
</footer>
