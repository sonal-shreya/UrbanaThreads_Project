@using System.Linq
@model IEnumerable<UrbanaThreadsProject.Models.Product>

@{
    ViewData["Title"] = "Inventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="container py-5 mt-4">
    <a asp-controller="Home" asp-action="Index" class="nav-link mb-3">← Back Home</a>

    <div class="card-ux p-4">
        <h3 class="mb-3 fw-semibold text-brand">Inventory</h3>
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="table-responsive mt-3">
            <table class="table table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Product ID</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price ($)</th>
                        <th>Stock</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center">No products found. Add one!</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            var inv = item.Inventory;
                            var stock = inv?.StockQuantity ?? 0;
                            var reorder = inv?.ReorderLevel ?? 10;
                            var status = stock > 0 ? "In Stock" : "Out of Stock";

                            <tr>
                                <td>@item.ProductId</td>
                                <td>@item.Name</td>
                                <td>@item.Category?.Name</td>
                                <td>@item.Price.ToString("0.00")</td>

                                <td>
                                    @stock
                                    @if (stock <= reorder)
                                    {
                                        <span class="badge bg-danger ms-2">Low</span>
                                    }
                                </td>

                                <td>
                                    @if (stock == 0)
                                    {
                                        <span class="badge bg-secondary">Out</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">In</span>
                                    }
                                </td>

                                <td class="d-flex gap-2">
                                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.ProductId"
                                       class="btn btn-sm btn-warning">Edit</a>

                                    <a asp-controller="Products" asp-action="Delete" asp-route-id="@item.ProductId"
                                       class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-4 d-flex gap-3">
            <a asp-controller="Products" asp-action="Create" class="btn btn-brand">Add Product</a>
        </div>
    </div>
</main>

<footer class="py-4 text-center">
    <div class="container">
        © 2025 Urbana Threads · Retail Management Platform · Designed by Group 4
    </div>
</footer>
